<h1><%= t ".title" %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Permalink</th>
    <th>Content</th>
    <th>Visible</th>
	<th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= page.permalink %></td>
    <td><%= page.content %></td>
	<td><%= page.visible? ? "Visible" : "Invisible" %></td>
    <td><%= link_to t(".show"), page %></td>
    <td><%= link_to t(".edit"), edit_page_path(page) %></td>
    <td><%= link_to t(".destroy"), page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

