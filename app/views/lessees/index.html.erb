        <td><%= lessee.name %></td>
        <td><%= lessee.address %></td>
        <td><%= lessee.email %></td>
        <td><%= lessee.phone %></td>
        <td><%= lessee.cellphone %></td>
        <td><%= tax_regime_name_by_id(lessee.tax_regime_id) %></td>
        <td><%= legal_nature_name_by_id(lessee.legal_nature_id) %></td>
        <!-- <td><%= lessee.type %></td>
          <td><%=l lessee.created_at %></td> -->
