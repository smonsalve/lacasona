<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:invoice_number) %>:</strong></dt>
  <dd><%= @invoice.invoice_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @invoice.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interest_value) %>:</strong></dt>
  <dd><%= @invoice.interest_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contract_id) %>:</strong></dt>
  <dd><%= @invoice.contract_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_date) %>:</strong></dt>
  <dd><%= @invoice.invoice_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month) %>:</strong></dt>
  <dd><%= @invoice.month %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @invoice.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_status_id) %>:</strong></dt>
  <dd><%= @invoice.invoice_status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value_paid) %>:</strong></dt>
  <dd><%= @invoice.value_paid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interest_paid) %>:</strong></dt>
  <dd><%= @invoice.interest_paid %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              invoices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invoice_path(@invoice), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invoice_path(@invoice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
