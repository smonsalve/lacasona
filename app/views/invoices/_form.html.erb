<%= form_for @invoice, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :invoice_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :invoice_number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :interest_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :interest_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contract_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :contract_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :invoice_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :invoice_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :month, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :month, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :year, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :year, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :invoice_status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :invoice_status_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value_paid, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value_paid, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :interest_paid, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :interest_paid, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                invoices_path, :class => 'btn' %>
  </div>
<% end %>
