<%= form_for @owner, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :card_id_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :card_id_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cellphone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cellphone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tax_regime_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :tax_regime_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :legal_nature_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :legal_nature_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :type, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                owners_path, :class => 'btn' %>
  </div>
<% end %>
