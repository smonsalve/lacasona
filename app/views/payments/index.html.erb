<h1><%= t ".title" %></h1>

<table>
  <tr>
    <th>Payment number</th>
    <th>Value</th>
    <th>Paymen date</th>
    <th>Invoice</th>
    <th>Payment status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.payment_number %></td>
    <td><%= payment.value %></td>
    <td><%= payment.payment_date %></td>
    <td><%= payment.invoice_id %></td>
    <td><%= payment.payment_status_id %></td>
    <td><%= link_to t(".show"), payment %></td>
    <td><%= link_to t(".edit"), edit_payment_path(payment) %></td>
    <td><%= link_to t(".destroy"), payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

