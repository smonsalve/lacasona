<%= form_for @payment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :payment_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :payment_number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :payment_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :invoice_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :invoice_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :payment_status_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payments_path, :class => 'btn' %>
  </div>
<% end %>
