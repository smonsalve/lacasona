<%- model_class = Property -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @property.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
  <dd><%= person_name_by_id @property.owner_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stratum) %>:</strong></dt>
  <dd><%= @property.stratum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:market_value) %>:</strong></dt>
  <dd><%= @property.market_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rental_fee) %>:</strong></dt>
  <dd><%= @property.rental_fee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @property.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighborhood) %>:</strong></dt>
  <dd><%= @property.neighborhood %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @property.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @property.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:appraisal) %>:</strong></dt>
  <dd><%= @property.appraisal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_type_id) %>:</strong></dt>
  <dd><%= property_type_name_by_id @property.property_type_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              properties_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_property_path(@property), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              property_path(@property),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
