<!DOCTYPE html>
<html>
<head>
  <title>La casona</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
		<div id="nav">
			<%= link_to_unless_current "Home", home_path%>
			<% Page.where(:visible => true).each do |page|%>
				<%= link_to_unless_current page.name, page_path(page.permalink)%>
			<% end %>
			
			
		</div>
		<%= yield %>
	</div>
</body>
</html>
