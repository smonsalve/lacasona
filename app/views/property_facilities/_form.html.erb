<%= form_for @property_facility, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :property_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :property_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :facilities_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :facilities_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :quantity, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                property_facilities_path, :class => 'btn' %>
  </div>
<% end %>
