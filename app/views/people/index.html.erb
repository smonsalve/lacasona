<h1><%= t ".title" %></h1>

<table>
  <tr>
    <th><%= Person.human_attribute_name(:card_id_number) %> </th>
    <th><%= Person.human_attribute_name(:name) %></th>
    <th><%= Person.human_attribute_name(:address) %></th>
    <th><%= Person.human_attribute_name(:email) %></th>
    <th><%= Person.human_attribute_name(:phone) %></th>
    <th><%= Person.human_attribute_name(:cellphone) %></th>
    <th><%= Person.human_attribute_name(:tax_regime_id) %></th>
    <th><%= Person.human_attribute_name(:legal_nature_id) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.card_id_number %></td>
    <td><%= person.name %></td>
    <td><%= person.address %></td>
    <td><%= person.email %></td>
    <td><%= person.phone %></td>
    <td><%= person.cellphone %></td>
    <td><%= person.tax_regime_id %></td>
    <td><%= person.legal_nature_id %></td>
    <td><%= link_to t(".show"), person %></td>
    <td><%= link_to t(".edit"), edit_person_path(person) %></td>
    <td><%= link_to t(".destroy"), person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

