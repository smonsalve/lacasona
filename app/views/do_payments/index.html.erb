<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.invoice_number %></td>
    <td><%= invoice.value %></td>
    <td><%= invoice.interest_value %></td>
    <td><%= invoice.contract_id %></td>
    <td><%= invoice.invoice_date %></td>
    <td><%= invoice.month %></td>
    <td><%= invoice.year %></td>
    <td><%= invoice.invoice_status_id %></td>
	
	<%= form_tag new_payment_path, :method => 'get' do %>	
	<td>
	<%= hidden_field_tag :id_invoice, invoice.id%>
	<%= submit_tag "Pagar" %>
	</td>
	<% end %>
